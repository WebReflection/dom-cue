{
  "type": "module",
  "license": "MIT",
  "description": "A minimalistic signals implementation for vanilla DOM/JS",
  "keywords": [
    "signals",
    "reactive",
    "dom",
    "javascript"
  ],
  "author": "Andrea Giammarchi",
  "name": "dom-cue",
  "version": "0.2.8",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src/*",
    "dist/*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./src/index.js",
      "types": "./src/index.d.ts"
    },
    "./listener": {
      "import": "./src/listener.js",
      "types": "./src/listener.d.ts"
    },
    "./nested": {
      "import": "./src/nested.js",
      "types": "./src/nested.d.ts"
    },
    "./nested-listener": {
      "import": "./src/nested-listener.js",
      "types": "./src/nested-listener.d.ts"
    },
    "./dist": {
      "import": "./dist/index.js",
      "types": "./src/index.d.ts"
    },
    "./dist-listener": {
      "import": "./dist/listener.js",
      "types": "./src/listener.d.ts"
    },
    "./dist-nested": {
      "import": "./dist/nested.js",
      "types": "./src/nested.d.ts"
    },
    "./dist-nested-listener": {
      "import": "./dist/nested-listener.js",
      "types": "./src/nested-listener.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:nl && rollup --config build/index.js && npm run test && npm run types && npm run size",
    "build:nl": "cp src/listener.js src/nested-listener.js && sed -i \"s/index.js';/nested.js';/g\" src/nested-listener.js",
    "coverage": "mkdir -p ./coverage; c8 report --reporter=text-lcov > ./coverage/lcov.info",
    "test": "c8 node test/lib.js",
    "size": "echo -n 'index.js: '; cat dist/index.js | brotli | wc -c; echo -n 'listener.js: '; cat dist/listener.js | brotli | wc -c; echo -n 'nested.js: '; cat dist/nested.js | brotli | wc -c; echo -n 'nested-listener.js: '; cat dist/nested-listener.js | brotli | wc -c",
    "types": "rm -f ./src/*.d.ts && tsc --allowJs --checkJs --lib dom,esnext --module esnext --target esnext -d --emitDeclarationOnly ./src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebReflection/dom-cue.git"
  },
  "bugs": {
    "url": "https://github.com/WebReflection/dom-cue/issues"
  },
  "homepage": "https://github.com/WebReflection/dom-cue#readme",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "c8": "^10.1.3",
    "rollup": "^4.52.4",
    "typescript": "^5.9.3"
  }
}
